/*
 * Example plugin template
 */

/**
 * Built on jpsych-planet-response & jspsych-image-button-response by: Josh de Leeuw
 *
 * plugin for displaying a stimulus and getting a mouseclick response (in the indexed order of displayed images), with 3 concurrent planet/ship stimuli rather than two.
 *
 * documentation: docs.jspsych.org
 *
 **/

jsPsych.plugins["planet-response-triplet"] = (function() {

  var plugin = {};

  plugin.info = {
    name: "planet-response-triplet",
    parameters: {
      parameter_name: {
        type: jsPsych.plugins.parameterType.INT, // BOOL, STRING, INT, FLOAT, FUNCTION, KEYCODE, SELECT, HTML_STRING, IMAGE, AUDIO, VIDEO, OBJECT, COMPLEX
        default: undefined
      },
      parameter_name: {
        type: jsPsych.plugins.parameterType.IMAGE,
        default: undefined
      }
    }
  }

  plugin.trial = function(display_element, trial) {

    // data saving
    var trial_data = {
      parameter_name: 'parameter value'
    };

    // end trial
    jsPsych.finishTrial(trial_data);
  };

  return plugin;
})();
